<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <!-- ImageView to show ID card + detected faces -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:background="@android:color/darker_gray"
        android:contentDescription="Preview image" />

    <!-- Face detection count -->
    <TextView
        android:id="@+id/faceCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faces detected: 0"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Scrollable text for OCR + Sensitive data results -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:padding="8dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:scrollbars="vertical" />
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/selectImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Another Image"
            android:backgroundTint="@android:color/holo_purple"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/copyTextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy Text"
            android:backgroundTint="@android:color/holo_purple"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
